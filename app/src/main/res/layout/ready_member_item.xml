<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp">
    <LinearLayout
        android:id="@+id/ready_member_item_ll"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/ready_member_item_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="#000000"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/ready_member_position_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="#000000"
                android:layout_weight="1"/>
        </LinearLayout>
        <TextView
            android:id="@+id/ready_member_greetings_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:ems="5"
            android:maxLines="1"
            android:ellipsize="end"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/ready_member_item_reject_btn"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:textColor="@color/mainColor"
            android:background="@drawable/ready_member_no_btn"
            android:layout_marginRight="5dp"
            android:text="거절"/>
        <Button
            android:id="@+id/ready_member_item_receive_btn"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:background="@drawable/ready_member_ok_btn"
            android:textColor="#FFFFFF"
            android:text="수락"/>
    </LinearLayout>





</LinearLayout>