<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp">

    <!-- other chat -->
    <LinearLayout
        android:id="@+id/ll_otherchat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="60dp"
        android:orientation="vertical"
        android:layout_marginBottom="12dp"
        android:visibility="gone"
        tools:visibility="visible">
    <TextView
        android:id="@+id/tv_other_name"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="홍길동"/>
    <TextView
        android:id="@+id/tv_other_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ddd"
        android:text="ashdgasjhdgashjdgashjdgasjhdgjasgdjashgdjashgdjsahgdjasgdhjsagdjhsagdjasghd"
        android:padding="8dp"
        android:lineSpacingExtra="8dp" />
    <TextView
        android:id="@+id/tv_other_date"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="2019.09.10 22:05"
        android:gravity="right|center"/>
    </LinearLayout>


    <!-- my chat -->
    <LinearLayout
        android:id="@+id/ll_mychat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:orientation="vertical"
        android:visibility="gone"
        tools:visibility="visible">

        <TextView
            android:id="@+id/tv_my_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#dfd"
            android:text="ashdgasjhdgashjdgashjdgasjhdgjasgdjashgdjashgdjsahgdjasgdhjsagdjhsagdjasghd"
            android:padding="8dp"
            android:lineSpacingExtra="8dp" />
        <TextView
            android:id="@+id/tv_my_date"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="2019.09.10 22:05"
            android:gravity="left|center"/>
    </LinearLayout>
</LinearLayout>