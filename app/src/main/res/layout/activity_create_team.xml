<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CreateTeamActivity">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="팀 생성"
        android:textSize="17sp"
        android:textColor="#000000"
        android:layout_marginTop="10dp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#BDBDBD"
        android:layout_marginTop="10dp"/>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="15dp">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="기본 정보"
        android:textSize="16sp"
        android:textColor="#000000"
        android:padding="5dp"/>
    <EditText
        android:id="@+id/create_team_teamName_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="팀 이름"
        android:textSize="15sp"
        android:background="@null"
        android:padding="5dp"
        android:inputType="textPersonName" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#BDBDBD"/>
    <EditText
        android:id="@+id/create_team_team_phone_number_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="대표 번호"
        android:textSize="15sp"
        android:background="@null"
        android:padding="5dp"
        android:layout_marginTop="20dp"
        android:inputType="phone" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#BDBDBD"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:text="구장"
        android:padding="5dp"
        android:layout_marginTop="20dp"
        android:textColor="#000000"/>
    <RadioGroup
        android:id="@+id/create_team_stadium_rg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <RadioButton
            android:id="@+id/create_team_stadium_no_possesion_rb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="미보유"/>
        <RadioButton
            android:id="@+id/create_team_stadium_possesion_rb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="보유"/>
    </RadioGroup>

    <LinearLayout
        android:id="@+id/create_team_stadium_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/create_team_searchAddress_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="구장 주소"
            android:padding="5dp"
            android:textSize="15sp"
            android:textColor="#000000"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#BDBDBD"/>

        <EditText
            android:layout_marginTop="20dp"
            android:id="@+id/create_team_detailedAddress_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="상세 주소"
            android:textSize="15sp"
            android:background="@null"
            android:padding="5dp"
            android:inputType="textPersonName" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#BDBDBD"/>
    </LinearLayout>



    <LinearLayout
        android:layout_marginTop="60dp"
        android:layout_gravity="right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_marginRight="20dp"
            android:id="@+id/create_team_cancel_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="16sp"
            android:textColor="@color/mainColor"
            android:text="취소" />

        <TextView
            android:id="@+id/create_team_create_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="확인"
            android:textColor="@color/mainColor"
            android:textSize="16sp" />
    </LinearLayout>

</LinearLayout>


</LinearLayout>