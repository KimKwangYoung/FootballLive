<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp"
    android:orientation="vertical"
    tools:context=".CreateMatchActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="제목"
            android:layout_marginRight="10dp"
            android:textColor="#000000"
            android:textSize="18sp" />

        <EditText
            android:padding="5dp"
            android:id="@+id/create_match_title_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/match_create_view"
            android:ems="10"
            android:inputType="textPersonName"
            android:textSize="15sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:text="내용"
            android:textColor="#000000"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/create_match_content_et"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="273dp"
            android:background="@drawable/match_create_view"
            android:gravity="top"
            android:hint="상대방이 우리팀의 다양한 정보를 알 수 있게끔 입력해주세요(ex:유니폼 색상, 실력 등)"
            android:inputType="textMultiLine"
            android:textSize="15sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:text="지역"
            android:textColor="#000000"
            android:textSize="18sp" />
        <Spinner
            android:id="@+id/create_match_region_sp"
            android:spinnerMode="dialog"
            android:background="@drawable/match_create_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:entries="@array/region"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:text="구장"
            android:textColor="#000000"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/create_match_stadium_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/match_create_view"
            android:gravity="center"
            android:padding="5dp"
            android:textSize="15sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:text="날짜"
            android:textColor="#000000"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/create_match_matchDay_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/match_create_view"
            android:text="경기 날짜"
            android:padding="5dp"
            android:gravity="center_horizontal"
            android:textSize="15sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="시간"
            android:layout_marginRight="10dp"
            android:textColor="#000000"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/create_match_startTime_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/match_create_view"
            android:gravity="center"
            android:text="시작시간"
            android:padding="5dp"
            android:textSize="15sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="20sp"
            android:gravity="center"
            android:text="~" />

        <TextView
            android:id="@+id/create_match_endTime_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="5dp"
            android:background="@drawable/match_create_view"
            android:gravity="center"
            android:text="종료시간"
            android:textSize="15sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/create_match_cancel_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:textSize="18sp"
            android:textColor="@color/mainColor"
            android:text="취소" />

        <TextView
            android:id="@+id/create_match_create_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/mainColor"
            android:text="확인" />
    </LinearLayout>
</LinearLayout>